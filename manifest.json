{

  "manifest_version": 2,
  "name": "Jisho Extension",
  "description": "Use Jisho.org to learn Kanji with a simple right click.",
  "version": "1.0",
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "63.0b14"
    }
  },

  "background": {
    "scripts": ["main.js"]
  },
  
  "permissions": [
    "menus",
    "search",
    "contextMenus"
  ]
}